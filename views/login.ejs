
<link rel="stylesheet" href="./stylesheets/style.css">
<body>
  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="./images/camera.png" alt="pin logo" class="img1" />
      <p class="header">Log in to see more</p>

      <form action="/login" method="POST">
        <% if(error && error.length > 0) { %>
          <p class="error"><%=error%></p>
        <% } %>  

        <input type="text" placeholder="Username" name="username" class="detail" /><br />
        <input type="password" placeholder="Password" name="password" class="detail" />
        <h4>Forgot your password?</h4>
        <input type="submit" class="submit">
     </form>

      <p class="or">OR</p>
      <button class="btn fbk">
        <i
          class="fab fa-facebook fa-lg"
          style="color: white; padding-right: 10px"
        ></i
        ><a href="#">Continue with Facebook</a></button
      ><br />
      <button class="btn ggl">
        <i
          class="fab fa-google"
          style="color: rgb(11, 241, 22); padding-right: 10px"
        ></i
        ><a href="#">Continue with Google</a>
      </button>

      <footer>
        <p>
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
        <a href="/register">
          <p>Not on Pinterest yet? Sign up</p>
        </a>
      </footer>
    </div>
  </div>
  <a href="/register">
    <div class="upbtn">Sign up </div>
  </a>
</body>
</html>